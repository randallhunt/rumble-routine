{
  "manifest_version": 3,
  "name": "Rumble Routine",
  "description": "Rumble scheduler",
  "version": "1.0",
  "action": {
    "default_icon": "icon1.jpg"
  },
  "background": {
    "service_worker": "worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [ "https://www.rumble.com/*" ],
      "js": [ "content.js" ]
    }
  ],
  "permissions": [
    "activeTab",
    "alarms",
    "notifications",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://rumble.com/*"
  ]
}
